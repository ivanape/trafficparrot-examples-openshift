{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "annotations": {
      "description": "Application template for Traffic Parrot"
    }
  },
  "parameters": [
    {
      "description": "The name for the application.",
      "name": "APPLICATION_NAME",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "labels": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate"
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${APPLICATION_NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "trafficparrot-image:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        },
        "template": {
          "metadata": {
            "labels": {
              "deploymentConfig": "${APPLICATION_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "${APPLICATION_NAME}",
                "image": "${APPLICATION_NAME}",
                "ports": [
                  {
                    "name": "http",
                    "containerPort": 18081,
                    "protocol": "TCP"
                  },
                  {
                    "name": "http-management",
                    "containerPort": 18083,
                    "protocol": "TCP"
                  }
                ],
                "livenessProbe": {
                  "exec": {
                    "command": [
                      "cat",
                      "virtualservice.started"
                    ],
                    "initialDelaySeconds": 20
                  }
                },
                "readinessProbe": {
                  "exec": {
                    "command": [
                      "cat",
                      "virtualservice.started"
                    ],
                    "initialDelaySeconds": 20
                  }
                },
                "resources": {},
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "Always",
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
      }
    },    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}"
      },
      "spec": {
        "ports": [
          {
            "name": "http",
            "protocol": "TCP",
            "port": 18081,
            "targetPort": 18081
          },
          {
            "name": "http-management",
            "protocol": "TCP",
            "port": 18083,
            "targetPort": 18083
          }
        ],
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}-http",
        "annotations": {
          "description": "Route for application's HTTP service"
        }
      },
      "spec": {
        "port": {
          "targetPort": 18081
        },
        "to": {
          "kind": "Service",
          "name": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}-http-management",
        "annotations": {
          "description": "Route for application's HTTP management service"
        }
      },
      "spec": {
        "port": {
          "targetPort": 18083
        },
        "to": {
          "kind": "Service",
          "name": "${APPLICATION_NAME}"
        }
      }
    }
  ]
}